<p id="notice"><%= notice %></p>

<h1>Listing Comments</h1>

<table>
  <thead>
    <tr>
      <th>Author</th>
      <th>Description</th>
      <th>Post</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.author %></td>
        <td><%= comment.description %></td>
        <td><%= comment.post_id %></td>
        <td><%= link_to 'Show', post_comment_path(post_id: @post.id, id: comment.id) %></td>
        <td><%= link_to 'Edit', edit_post_comment_path(post_id: @post.id, id: comment.id) %></td>
        <td><%= link_to 'Destroy', "/posts/#{@post.id}/comments/#{comment.id}", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Comment', new_post_comment_path(post_id: @post.id) %>
